#! /bin/bash


# settings ------------------------------------------------------------------------------------------

readonly python3_version="3.13"
readonly python3=$( command -v "python${python3_version}" )


# venv ----------------------------------------------------------------------------------------------

readonly venv_dir="${_root}/.venv"


# pip -----------------------------------------------------------------------------------------------

readonly pip_d="${_root}/etc/pip/${python3_version}"
readonly bootstrap="${pip_d}/bootstrap"
readonly root="${pip_d}/root"
readonly deptree="${pip_d}/deptree"
readonly pylock_toml="${pip_d}/pylock.toml"

